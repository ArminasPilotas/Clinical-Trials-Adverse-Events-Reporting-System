@page "/Classifiers List"
@using Clinical_Trials_Adverse_Events_Reporting_System.Data
@inject ClassifierService classifierService; 

<NavLink class="nav-link" href="Add Classifier">
    <span class="oi oi-plus" aria-hidden="true">Add New</span>
</NavLink>

<h3>Classifiers List</h3>
<hr />

@if (ClassifiersObj is null)
{
    <p><em>Loading...</em></p>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Reporting Type</th>
            <th scope="col">Report Type</th>
            <th scope="col">Reporting Method</th>
            <th scope="col">Institution Type</th>
            <th scope="col">Susar Type</th>
            <th scope="col">Case Origin</th>
            <th scope="col">Investigational Product Type</th>
            <td scope="col"></td>
            <td scope="col"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var classifier in ClassifiersObj)
        {
            <tr>
                <td>@classifier.Id</td>
                <td>@classifier.ReportingType</td>
                <td>@classifier.ReportType</td>
                <td>@classifier.ReportingMethod</td>
                <td>@classifier.InstitutionType</td>
                <td>@classifier.SusarType</td>
                <td>@classifier.CaseOrigin</td>
                <td>@classifier.InvestigationalProductType</td>
                <td>
                    <a class="nav-link" href="Edit Classifier/@classifier.Id">
                        <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                    </a>
                    <a class="nav-link" href="Delete/@classifier.Id">
                        <span class="oi oi-trash" aria-hidden="true">Delete</span>
                    </a>
                </td>
            </tr>
        }
</tbody>
    </table>
}

    @code {
        List<Entities.Classifier> ClassifiersObj;

        protected override async Task OnInitializedAsync()
        {
            ClassifiersObj = await Task.Run(() => classifierService.GetAllClassifiersAsync());
        }
}
