@page "/Classifiers/SusarType/Index"

@attribute [Authorize(Policy = "SystemAuthorization", Roles = "Administrator")]

@inject IClassifierRepository<SusarType> classifierRepository

<ClassifierTable Classifiers="@classifiers" ClassifierName="SusarType"></ClassifierTable>

@code {
    List<SusarType> classifiers;

    protected override async Task OnInitializedAsync()
    {
        classifiers = await Task.Run(() => classifierRepository.GetAll());
    }

}
