@page "/Classifiers/ReportType/Index"

@attribute [Authorize(Policy = "SystemAuthorization", Roles = "Administrator")]

@inject IClassifierRepository<ReportType> classifierRepository

<ClassifierTable Classifiers="@classifiers" ClassifierName="ReportType"></ClassifierTable>

@code {
    List<ReportType> classifiers;

    protected override async Task OnInitializedAsync()
    {
        classifiers = await Task.Run(() => classifierRepository.GetAll());
    }

}
