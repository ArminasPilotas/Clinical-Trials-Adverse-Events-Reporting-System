@page "/Classifiers/InvestigationalProductType/Index"

@attribute [Authorize(Policy = "SystemAuthorization", Roles = "Administrator")]

@inject IClassifierRepository<InvestigationalProductType> classifierRepository

<ClassifierTable Classifiers="@classifiers" ClassifierName="InvestigationalProductType"></ClassifierTable>

@code {
    List<InvestigationalProductType> classifiers;

    protected override async Task OnInitializedAsync()
    {
        classifiers = await Task.Run(() => classifierRepository.GetAll());
    }

}
